<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="me.bakumon.moneykeeper.ui.addmember.AddMemberActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTextWhite4"
        android:orientation="vertical">

        <include
            android:id="@+id/title_bar"
            layout="@layout/layout_title_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/iv_type"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_playlist_add_black_24dp" />

            <EditText
                android:id="@+id/edt_member_name"
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="@string/hint_enter_member_name"
                android:maxLength="5"
                android:singleLine="true"
                android:textColor="@color/colorItem"
                android:textColorHint="@color/colorTextWhite3" />
        </LinearLayout>


    </LinearLayout>
</layout>